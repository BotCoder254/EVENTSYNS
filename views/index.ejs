<style>
@keyframes float {
    0% { transform: translate(0px, 0px) scale(1); }
    50% { transform: translate(20px, -20px) scale(1.05); }
    100% { transform: translate(0px, 0px) scale(1); }
}

.animate-float {
    animation: float 8s ease-in-out infinite;
}

.animation-delay-2000 {
    animation-delay: 2s;
}

.animation-delay-4000 {
    animation-delay: 4s;
}
</style>

