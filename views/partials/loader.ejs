<div class="loader-container fixed top-0 left-0 w-full h-full flex items-center justify-center bg-white bg-opacity-90 z-50">
    <div class="liquid-loader">
        <div class="liquid-loader-box">
            <div class="liquid-wave"></div>
        </div>
    </div>
</div>

<style>
.liquid-loader {
    width: 100px;
    height: 100px;
    position: relative;
}

.liquid-loader-box {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid #4f46e5;
    overflow: hidden;
}

.liquid-wave {
    position: absolute;
    width: 200%;
    height: 200%;
    top: -50%;
    left: -50%;
    background: linear-gradient(to bottom, #4f46e5, #818cf8);
    animation: wave 2s cubic-bezier(0.37, 0, 0.63, 1) infinite;
    border-radius: 35%;
}

@keyframes wave {
    from { transform: rotate(0deg); }
    to   { transform: rotate(360deg); }
}

.loader-container {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
}

.loader-container.show {
    opacity: 1;
    visibility: visible;
}
</style>

<script>
window.showLoader = function() {
    document.querySelector('.loader-container').classList.add('show');
}

window.hideLoader = function() {
    document.querySelector('.loader-container').classList.remove('show');
}
</script> 