    <div class="absolute inset-y-0 left-0 w-64 bg-white shadow-lg transform transition-transform duration-300 ease-in-out">
        <!-- Mobile Sidebar Content (Same as desktop) -->
        <div class="flex flex-col h-full">
            <!-- Close Button -->
            <button type="button" 
                    class="absolute top-4 right-4 p-2 text-gray-400 hover:text-gray-500"
                    onclick="this.closest('.sidebar-mobile').classList.remove('translate-x-0')">
                <i class="fas fa-times"></i>
            </button>

            <!-- User Profile Section -->
            <div class="p-6 border-b">
                <div class="flex items-center space-x-4">
