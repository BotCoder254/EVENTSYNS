<div class="w-64 h-screen bg-white shadow-lg fixed">
    <div class="flex flex-col h-full">
        <!-- User Profile Section -->
        <div class="p-6 border-b">
            <div class="flex items-center space-x-4">
                <div class="relative">
                    <img src="<%= currentUser.profilePicture || `https://ui-avatars.com/api/?name=${encodeURIComponent(currentUser.name)}&background=3b82f6&color=fff` %>" 
                         alt="<%= currentUser.name %>" 
                         class="w-12 h-12 rounded-full object-cover border-2 border-blue-500">
                    <div class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></div>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-900 truncate"><%= currentUser.name %></h3>
                    <p class="text-sm text-gray-500 truncate"><%= currentUser.email %></p>
                </div>
            </div>
        </div>

        <!-- Navigation Links -->
        <nav class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">
            <!-- Dashboard -->
            <a href="/users/dashboard" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <div class="flex items-center flex-1">
                    <i class="fas fa-chart-line w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                    <span class="ml-3">Dashboard</span>
                </div>
                <span class="bg-blue-100 text-blue-600 py-1 px-2 rounded-full text-xs">New</span>
            </a>

            <!-- My Events -->
            <a href="/events/my-events" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <i class="fas fa-calendar-alt w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                <span class="ml-3">My Events</span>
            </a>

            <!-- Create Event -->
            <a href="/events/create" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <i class="fas fa-plus-circle w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                <span class="ml-3">Create Event</span>
            </a>

            <!-- Notifications -->
            <a href="/users/notifications" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <div class="flex items-center flex-1">
                    <i class="fas fa-bell w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                    <span class="ml-3">Notifications</span>
                </div>
                <% if (currentUser.unreadNotifications > 0) { %>
                    <span class="bg-red-100 text-red-600 py-1 px-2 rounded-full text-xs">
                        <%= currentUser.unreadNotifications %>
                    </span>
                <% } %>
            </a>

            <!-- Profile -->
            <a href="/users/profile" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <i class="fas fa-user w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                <span class="ml-3">Profile</span>
            </a>

            <!-- Settings -->
            <a href="/users/settings" 
               class="flex items-center px-4 py-3 text-gray-600 transition-colors duration-200 rounded-lg hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 hover:text-blue-600 group">
                <i class="fas fa-cog w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors duration-200"></i>
                <span class="ml-3">Settings</span>
            </a>
        </nav>

        <!-- Bottom Section -->
        <div class="p-4 border-t">
            <!-- Help Section -->
            <div class="mb-4 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg">
                <div class="flex items-center mb-2">
                    <lottie-player
                        src="https://lottie.host/58ebb8ac-8e8c-433c-8089-688db1c41bed/MnvqEWTrDo.json"
                        background="transparent"
                        speed="1"
                        style="width: 24px; height: 24px;"
                        loop
                        autoplay>
                    </lottie-player>
                    <span class="ml-2 text-sm font-medium text-blue-600">Need Help?</span>
                </div>
                <p class="text-xs text-gray-600">Contact our support team for assistance</p>
                <a href="/support" class="mt-2 text-xs text-blue-600 hover:text-blue-700 font-medium inline-flex items-center">
                    Get Support
                    <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>

            <!-- Logout Button -->
            <a href="/auth/logout" 
               class="flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-red-600 transition-colors duration-200 rounded-lg border border-red-200 hover:bg-red-50 group">
                <i class="fas fa-sign-out-alt w-5 h-5 mr-2"></i>
                Logout
            </a>
        </div>
    </div>
</div>

<!-- Mobile Menu Button -->
<button type="button" 
        class="md:hidden fixed bottom-4 right-4 p-3 rounded-full bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg hover:shadow-xl transition-all duration-300 z-50"
        onclick="document.querySelector('.sidebar-mobile').classList.toggle('translate-x-0')">
    <i class="fas fa-bars"></i>
</button>

<!-- Mobile Sidebar -->
